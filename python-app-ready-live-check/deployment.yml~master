apiVersion: apps/v1
kind: Deployment
metadata:
  name: python-hostname
  labels:
    app: python
spec:
  replicas: 3
  selector:
    matchLabels:
      app: python

  template:
    metadata:
      labels:
        app: python

    spec:
      containers:
      - name: python
        image: python-hostname:v5
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8000

        livenessProbe:
          httpGet:
            port: http
            path: /
          initialDelaySeconds: 5
          periodSeconds: 5
          timeoutSeconds: 1

        readinessProbe:
          httpGet:
            path: /
            port: 8000
          initialDelaySeconds: 3
          periodSeconds: 5